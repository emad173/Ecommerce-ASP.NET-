@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <style>
        body {
             background: linear-gradient(90deg, #efd5ff 0%, #515ada 100%);
        }
        #hf {
            font-size: 30px;
            font-weight: 700;
            color:azure;
        }
        #in {
            width: 400px;
            border-radius: 30px;
         
        }
    </style>
</head>
<div style="position:relative;top:90px">
    <h1 id="hf">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 id="hf">Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="Input.Email"></label>*@
                    <input id="in" asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Input.Password"></label>*@
                    <input id="in" asp-for="Input.Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Input.ConfirmPassword"></label>*@
                    <input id="in" asp-for="Input.ConfirmPassword" class="form-control" placeholder="ConfirmPassword"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>
<div class="col-md-6 col-md-offset-2">
    <section>
        <img src="https://store.sirclo.com/blog/wp-content/uploads/2022/06/Banner-Blog-09-1.jpg" alt="7 Perbedaan Marketplace dan Ecommerce yang Perlu Kamu Ketahui" style="width:750px; position:absolute; left:600px; top:-200px;border-radius:15px" alt="Alternate Text" />

    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
